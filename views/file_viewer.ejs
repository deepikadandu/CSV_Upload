<!-- css for body -->
<link rel="stylesheet" href="/css/file_viewer.css">
<!-- css for header -->
<link rel="stylesheet" href="/css/header.css">

<!-- header -->
<div class="nav-bar" style="position: fixed; background: linear-gradient(110deg, #fdcd3b 40%, #ffed4b 60%);">
    <a href="/" class="back-icon">
        <i class="fa-solid fa-circle-arrow-left" style="color: #474343;"></i>
    </a>    
    <div class="title">
        <i class="fa-solid fa-file-csv"></i>
        CSV Upload
    </div>
    <div class="sub-title">
        Viewer
    </div>
    <div class="file-name">
        <%= fileName %>
    </div>
</div>

<!-- search bar -->
<div class="search-bar" style="height: 50px; background: linear-gradient(110deg, #cea892 40%, #adbcd8 60%);">
    <form id="searchForm">
        <div class="search-box">
            <input type="text" id="search-input" placeholder="Search data...">
            <button id="go" class="search-btn" type="button">Go..</button>
        </div>
    </form>
    <div>
        <p id="total-rows">Total Rows: <%=length%></p>
    </div>
</div>

<!-- search results -->
<div>
    <table>
        <thead>
            <tr>
            <% for(let h of head) { %>
                <th><%= h %></th>
            <% } %>
            </tr>
        </thead>
        <tbody>
            <% for(let row of data) { %>
            <tr>
                <% for(let key of Object.keys(row)) { %>
                    <td><%= row[key] %></td>
                <% } %>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
<script src="/js/file_viewer.js"></script>